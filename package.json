{
  "name": "el7a2ny-backend",
  "version": "1.0.0",
  "description": "\"# El7a2ny-Backend\"",
  "main": "index.js",
  "scripts": {
    "start": "sleep 3 && node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "npx tsc",
    "db:migrate:dev": "cross-env ENV=dev prisma migrate dev",
    "db:migrate:prod": "cross-env ENV=production prisma migrate deploy",
    "db:reset:dev": "cross-env ENV=dev prisma migrate reset",
    "db:reset:test": "cross-env ENV=test prisma migrate reset",
    "db:studio": "cross-env ENV=dev prisma studio",
    "postinstall": "prisma generate",
    "watch": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "jest": "jest --coverage",
    "test": "cross-env ENV=test && prisma migrate reset --force && npm run build && npm run jest",
    "test:coverage": "npm run build && npx nyc --reporter=html --reporter=text --check-coverage npm run test",
    "lint": "eslint src/**/*.ts",
    "prettier": "prettier --config .prettierrc --write src/**/*.ts",
    "prepare": "husky"
  },
  "husky": {
    "hooks": {}
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "@sentry/node": "^8.47.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.5.0",
    "firebase": "^11.0.2",
    "firebase-admin": "^13.0.1",
    "helmet": "^8.0.0",
    "prompt-sync": "^4.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.1",
    "prisma": "^6.1.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  }
}
