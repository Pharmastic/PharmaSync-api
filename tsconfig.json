{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": ["./types", "node_modules", "./node_modules/.prisma/client"],
    "moduleResolution": "node",
    "sourceMap": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "types": ["@types/jest"],
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "ts- node": {
    "transpileOnly": true,
    "files": true
  },
  "exclude": ["node_modules", "./coverage", "./dist"]
}
